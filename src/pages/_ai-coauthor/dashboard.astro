<body>
  <div class="container">
    <header>
      <h1>üìä Feedback Dashboard</h1>
      <p style="color: #6b7280; margin-top: 0.5rem;">Monitor and analyze documentation feedback</p>
    </header>

    <div class="stats">
      <div class="stat-card">
        <div class="stat-label">Total Feedback</div>
        <div class="stat-value">{analytics.totalFeedback}</div>
      </div>
      <div class="stat-card">
        <div class="stat-label">Average Rating</div>
        <div class="stat-value">{analytics.averageRating > 0 ? analytics.averageRating.toFixed(1) : 'N/A'}</div>
      </div>
      <div class="stat-card">
        <div class="stat-label">Pages with Feedback</div>
        <div class="stat-value">{Object.keys(analytics.pageBreakdown).length}</div>
      </div>
      <div class="stat-card">
        <div class="stat-label">Categories</div>
        <div class="stat-value">{Object.keys(analytics.categoryBreakdown).length}</div>
      </div>
    </div>

    <!-- Source Context Detection -->
    <div style="background: #f0fdf4; padding: 1.5rem; border-radius: 8px; margin-bottom: 2rem; border: 2px solid #86efac;">
      <h2 style="margin: 0 0 0.5rem 0; font-size: 1.25rem; color: #1a202c;">ü§ñ AI Source Context Detection</h2>
      <p style="margin: 0 0 1rem 0; font-size: 0.875rem; color: #6b7280;">
        Automatically detect which source files are documented by each page using LLM-powered analysis.
      </p>
      <div style="display: flex; gap: 1rem; flex-wrap: wrap; align-items: center;">
        <button id="detect-all-btn" onclick="detectAllContexts()" style="
          padding: 0.75rem 1.5rem;
          background: #10B981;
          color: white;
          border: none;
          border-radius: 6px;
          font-size: 0.875rem;
          font-weight: 500;
          cursor: pointer;
        ">
          üîç Detect All Pages
        </button>
        <div id="detect-all-status" style="display: none; font-size: 0.875rem; color: #6b7280;"></div>
      </div>
      <div id="active-jobs" style="margin-top: 1rem; display: none;"></div>
      <div id="detect-all-results" style="margin-top: 1rem; display: none;"></div>
    </div>

    <!-- Export Controls -->
    <div style="background: #f7fafc; padding: 1.5rem; border-radius: 8px; margin-bottom: 2rem;">
      <h2 style="margin: 0 0 1rem 0; font-size: 1.25rem; color: #1a202c;">üì• Export Feedback</h2>
      <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
        <button onclick="exportData('json')" style="
          padding: 0.75rem 1.5rem;
          background: #4F46E5;
          color: white;
          border: none;
          border-radius: 6px;
          font-size: 0.875rem;
          font-weight: 500;
          cursor: pointer;
        ">
          Export JSON
        </button>
        <button onclick="exportData('csv')" style="
          padding: 0.75rem 1.5rem;
          background: #059669;
          color: white;
          border: none;
          border-radius: 6px;
          font-size: 0.875rem;
          font-weight: 500;
          cursor: pointer;
        ">
          Export CSV
        </button>
        <button onclick="exportData('markdown')" style="
          padding: 0.75rem 1.5rem;
          background: #DC2626;
          color: white;
          border: none;
          border-radius: 6px;
          font-size: 0.875rem;
          font-weight: 500;
          cursor: pointer;
        ">
          Export Markdown
        </button>
      </div>
    </div>

    <!-- Action Items / Tasks -->
    {tasks.length > 0 && (
      <div style="background: #fef3c7; border-left: 4px solid #f59e0b; padding: 1.5rem; border-radius: 8px; margin-bottom: 2rem;">
        <h2 style="margin: 0 0 1rem 0; font-size: 1.25rem; color: #92400e;">
          ‚ö†Ô∏è Action Items ({tasks.length})
        </h2>
        {tasks.map((task: any) => (
          <div style="background: white; padding: 1rem; border-radius: 6px; margin-bottom: 0.75rem;">
            <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 0.5rem;">
              <div>
                <span style={`
                  display: inline-block;
                  padding: 0.25rem 0.75rem;
                  border-radius: 9999px;
                  font-size: 0.75rem;
                  font-weight: 600;
                  text-transform: uppercase;
                  ${task.priority === 'high' ? 'background: #fee2e2; color: #991b1b;' : 
                    task.priority === 'medium' ? 'background: #fed7aa; color: #9a3412;' :
                    'background: #e5e7eb; color: #374151;'}
                `}>
                  {task.priority}
                </span>
                <strong style="margin-left: 0.75rem; color: #1f2937;">{task.page}</strong>
              </div>
              <span style="color: #6b7280; font-size: 0.875rem;">
                {task.feedbackCount} feedback items
              </span>
            </div>
            <p style="margin: 0; color: #4b5563; font-size: 0.875rem;">
              {task.issue}
            </p>
          </div>
        ))}
      </div>
    )}

    <!-- Category Breakdown -->
    {Object.keys(analytics.categoryBreakdown).length > 0 && (
      <div style="background: #f7fafc; padding: 1.5rem; border-radius: 8px; margin-bottom: 2rem;">
        <h2 style="margin: 0 0 1rem 0; font-size: 1.25rem; color: #1a202c;">üìä Category Breakdown</h2>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">
          {Object.entries(analytics.categoryBreakdown).map(([category, count]: [string, any]) => (
            <div style="background: white; padding: 1rem; border-radius: 6px; border: 1px solid #e5e7eb;">
              <div style="color: #6b7280; font-size: 0.875rem; margin-bottom: 0.25rem; text-transform: capitalize;">
                {category}
              </div>
              <div style="font-size: 2rem; font-weight: bold; color: #1f2937;">
                {count}
              </div>
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- Trends Section -->
    {analytics.trendData && analytics.trendData.length > 1 && (
      <div style="background: #f7fafc; padding: 1.5rem; border-radius: 8px; margin-bottom: 2rem;">
        <h2 style="margin: 0 0 1rem 0; font-size: 1.25rem; color: #1a202c;">üìà Feedback Trends</h2>
        <div style="background: white; padding: 1.5rem; border-radius: 6px; border: 1px solid #e5e7eb;">
          <div style="display: flex; flex-direction: column; gap: 0.75rem;">
            {analytics.trendData.slice(-7).map((trend: any) => {
              const maxCount = Math.max(...analytics.trendData.map((t: any) => t.count));
              const barWidth = (trend.count / maxCount) * 100;
              return (
                <div style="display: flex; align-items: center; gap: 1rem;">
                  <div style="min-width: 100px; color: #6b7280; font-size: 0.875rem;">
                    {new Date(trend.date).toLocaleDateString()}
                  </div>
                  <div style="flex: 1; background: #f3f4f6; border-radius: 4px; height: 32px; position: relative;">
                    <div style={`
                      background: linear-gradient(to right, #4F46E5, #7C3AED);
                      height: 100%;
                      border-radius: 4px;
                      width: ${barWidth}%;
                      display: flex;
                      align-items: center;
                      padding: 0 0.75rem;
                      color: white;
                      font-size: 0.875rem;
                      font-weight: 500;
                    `}>
                      {trend.count} items
                    </div>
                  </div>
                  <div style="min-width: 60px; text-align: right; color: #1f2937; font-weight: 500;">
                    {trend.avgRating.toFixed(1)}‚òÖ
                  </div>
                </div>
              );
            })}
          </div>
        </div>
        <p style="margin-top: 0.75rem; color: #6b7280; font-size: 0.875rem;">
          Showing feedback volume and average rating for the last {Math.min(7, analytics.trendData.length)} days
        </p>
      </div>
    )}

    <!-- Page Performance -->
    {Object.keys(analytics.pageBreakdown).length > 0 && (
      <div style="background: #f7fafc; padding: 1.5rem; border-radius: 8px; margin-bottom: 2rem;">
        <h2 style="margin: 0 0 1rem 0; font-size: 1.25rem; color: #1a202c;">üìë Page Performance</h2>
        <div style="background: white; border-radius: 6px; border: 1px solid #e5e7eb; overflow: hidden;">
          <table style="width: 100%; border-collapse: collapse;">
            <thead>
              <tr style="background: #f9fafb; border-bottom: 1px solid #e5e7eb;">
                <th style="padding: 0.75rem; text-align: left; font-size: 0.875rem; color: #6b7280; font-weight: 600;">Page</th>
                <th style="padding: 0.75rem; text-align: center; font-size: 0.875rem; color: #6b7280; font-weight: 600;">Feedback Count</th>
                <th style="padding: 0.75rem; text-align: center; font-size: 0.875rem; color: #6b7280; font-weight: 600;">Avg Rating</th>
                <th style="padding: 0.75rem; text-align: center; font-size: 0.875rem; color: #6b7280; font-weight: 600;">Status</th>
              </tr>
            </thead>
            <tbody>
              {Object.entries(analytics.pageBreakdown)
                .sort(([, a]: [string, any], [, b]: [string, any]) => b.count - a.count)
                .map(([page, data]: [string, any]) => {
                  const status = data.avgRating >= 4 ? '‚úÖ' : data.avgRating >= 3 ? '‚ö†Ô∏è' : '‚ùå';
                  const statusColor = data.avgRating >= 4 ? '#059669' : data.avgRating >= 3 ? '#d97706' : '#dc2626';
                  return (
                    <tr style="border-bottom: 1px solid #f3f4f6;">
                      <td style="padding: 0.75rem; font-size: 0.875rem; color: #1f2937;">{page}</td>
                      <td style="padding: 0.75rem; text-align: center; font-size: 0.875rem; color: #6b7280;">{data.count}</td>
                      <td style="padding: 0.75rem; text-align: center; font-size: 0.875rem; font-weight: 600; color: #1f2937;">
                        {data.avgRating.toFixed(1)} ‚òÖ
                      </td>
                      <td style={`padding: 0.75rem; text-align: center; font-size: 1.25rem; color: ${statusColor};`}>
                        {status}
                      </td>
                    </tr>
                  );
                })}
            </tbody>
          </table>
        </div>
      </div>
    )}

    {analytics.totalFeedback === 0 ? (
      <div class="empty-state">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
        </svg>
        <h2 style="margin-bottom: 0.5rem;">No feedback yet</h2>
        <p>Feedback will appear here once users start submitting reviews.</p>
      </div>
    ) : (
      <div>
        <h2 style="margin: 0 0 1rem 0; font-size: 1.25rem; color: #1a202c;">üí¨ All Feedback</h2>
        {Object.entries(feedbackByPage).map(([pageUrl, entries]: [string, any]) => (
          <div class="page-section">
            <div class="page-header">
              üìÑ {pageUrl}
            </div>
            {entries.map((entry: any) => (
              <div class="feedback-card">
                <div class="feedback-header">
                  <div class="rating">
                    {[1, 2, 3, 4, 5].map(i => (
                      <span class={i <= entry.rating ? 'star' : 'star empty'}>‚òÖ</span>
                    ))}
                  </div>
                  <div class="timestamp">
                    {new Date(entry.timestamp).toLocaleString()}
                  </div>
                </div>
                <div class="category">{entry.category || 'general'}</div>
                {(entry.notes || entry.comment) && (
                  <div class="comment">{entry.notes || entry.comment}</div>
                )}
              </div>
            ))}
          </div>
        ))}
      </div>
    )}
  </div>

  <script is:inline>
    function exportData(format) {
      const url = '/_ai-coauthor/export?action=export&format=' + format;
      window.location.href = url;
    }

    let currentJobId = null;
    let pollInterval = null;

    // Check for active jobs on page load
    window.addEventListener('DOMContentLoaded', async () => {
      // First, check if we had an active job in sessionStorage
      const storedJobId = sessionStorage.getItem('activeDetectionJob');
      
      if (storedJobId) {
        // Try to resume the stored job
        try {
          const response = await fetch(`/_ai-coauthor/job-status?jobId=${storedJobId}`);
          if (response.ok) {
            const job = await response.json();
            if (job.status === 'running' || job.status === 'pending') {
              // Job still active, resume it
              resumeJob(storedJobId);
              return;
            }
          }
          // Job not found or completed, clear storage
          sessionStorage.removeItem('activeDetectionJob');
        } catch (error) {
          sessionStorage.removeItem('activeDetectionJob');
        }
      }
      
      // Check for any active jobs
      await checkActiveJobs();
    });

    async function checkActiveJobs() {
      try {
        const response = await fetch('/_ai-coauthor/job-status');
        if (!response.ok) return;
        
        const data = await response.json();
        const activeJobs = data.jobs.filter(j => 
          j.status === 'pending' || j.status === 'running'
        );
        
        if (activeJobs.length > 0) {
          displayActiveJobs(activeJobs);
          
          // Auto-resume if we don't have a current job
          if (!currentJobId) {
            const latestJob = activeJobs[0];
            currentJobId = latestJob.id;
            
            const btn = document.getElementById('detect-all-btn');
            const status = document.getElementById('detect-all-status');
            
            if (btn) {
              btn.disabled = true;
              btn.textContent = 'üîç Detecting...';
            }
            
            if (status) {
              status.style.display = 'block';
            }
            
            pollJobStatus();
          }
        }
      } catch (error) {
        // Failed to check active jobs
      }
    }

    function displayActiveJobs(jobs) {
      const container = document.getElementById('active-jobs');
      if (!container || jobs.length === 0) return;
      
      container.style.display = 'block';
      container.innerHTML = `
        <div style="background: #fef3c7; border: 1px solid #fbbf24; border-radius: 6px; padding: 1rem; margin-bottom: 0.5rem;">
          <div style="font-weight: 600; color: #92400e; margin-bottom: 0.5rem;">
            ‚è≥ Active Detection Jobs
          </div>
          ${jobs.map(job => {
            const percent = Math.round((job.progress.completed / job.progress.total) * 100);
            return `
              <div style="display: flex; justify-content: space-between; align-items: center; padding: 0.5rem 0; border-top: 1px solid #fbbf24;">
                <div style="font-size: 0.875rem; color: #78350f;">
                  Job ${job.id.substring(4, 12)}... - ${job.progress.completed}/${job.progress.total} pages (${percent}%)
                  ${job.status === 'running' ? 'üîÑ' : '‚è∏Ô∏è'}
                </div>
                <button 
                  onclick="resumeJob('${job.id}')" 
                  style="
                    padding: 0.375rem 0.75rem;
                    background: #f59e0b;
                    color: white;
                    border: none;
                    border-radius: 4px;
                    font-size: 0.75rem;
                    cursor: pointer;
                  "
                >
                  ${job.id === currentJobId ? 'üëÅÔ∏è Watching' : 'üëÅÔ∏è Watch'}
                </button>
              </div>
            `;
          }).join('')}
        </div>
      `;
    }

    function resumeJob(jobId) {
      // Stop current polling if any
      if (pollInterval) {
        clearTimeout(pollInterval);
      }
      
      currentJobId = jobId;
      
      const btn = document.getElementById('detect-all-btn');
      const status = document.getElementById('detect-all-status');
      
      if (btn) {
        btn.disabled = true;
        btn.textContent = 'üîç Detecting...';
      }
      
      if (status) {
        status.style.display = 'block';
        status.textContent = 'Resuming job...';
        status.style.color = '#6b7280';
      }
      
      pollJobStatus();
    }

    async function detectAllContexts() {
      const btn = document.getElementById('detect-all-btn');
      const status = document.getElementById('detect-all-status');
      const results = document.getElementById('detect-all-results');
      
      if (!btn || !status || !results) return;
      
      // Update UI
      btn.disabled = true;
      btn.textContent = 'üîç Starting...';
      status.style.display = 'block';
      status.textContent = 'Starting AI analysis...';
      status.style.color = '#6b7280';
      results.style.display = 'none';
      
      try {
        // Start the job
        const response = await fetch('/_ai-coauthor/detect-all-contexts', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
        });
        
        if (!response.ok) {
          throw new Error(`Failed to start detection: ${response.status}`);
        }
        
        const data = await response.json();
        currentJobId = data.jobId;
        
        // Store in sessionStorage for persistence across navigation
        sessionStorage.setItem('activeDetectionJob', currentJobId);
        
        // Start polling for status
        pollJobStatus();
        
      } catch (error) {
        status.textContent = `‚ùå Failed to start: ${error.message}`;
        status.style.color = '#DC2626';
        btn.disabled = false;
        btn.textContent = 'üîç Detect All Pages';
      }
    }

    async function pollJobStatus() {
      if (!currentJobId) return;
      
      const btn = document.getElementById('detect-all-btn');
      const status = document.getElementById('detect-all-status');
      const results = document.getElementById('detect-all-results');
      
      if (!status || !results || !btn) return;
      
      try {
        const response = await fetch(`/_ai-coauthor/job-status?jobId=${currentJobId}`);
        
        if (!response.ok) {
          throw new Error('Failed to fetch job status');
        }
        
        const job = await response.json();
        
        // Store current job ID in sessionStorage for recovery
        sessionStorage.setItem('activeDetectionJob', currentJobId);
        
        // Update progress
        if (job.status === 'running' || job.status === 'pending') {
          const percent = Math.round((job.progress.completed / job.progress.total) * 100);
          status.textContent = `üîç Analyzing... ${job.progress.completed}/${job.progress.total} pages (${percent}%)`;
          status.style.color = '#6b7280';
          
          if (job.progress.current) {
            status.textContent += ` - ${job.progress.current}`;
          }
          
          // Refresh active jobs list
          await checkActiveJobs();
          
          // Continue polling
          pollInterval = setTimeout(pollJobStatus, 1000);
        } 
        else if (job.status === 'completed') {
          // Job finished
          status.textContent = `‚úÖ Completed! Analyzed ${job.progress.total} pages`;
          status.style.color = '#059669';
          
          // Display results
          displayJobResults(job);
          
          // Clear stored job
          sessionStorage.removeItem('activeDetectionJob');
          
          // Hide active jobs section
          const activeJobsContainer = document.getElementById('active-jobs');
          if (activeJobsContainer) {
            activeJobsContainer.style.display = 'none';
          }
          
          btn.disabled = false;
          btn.textContent = 'üîç Detect All Pages';
          currentJobId = null;
        } 
        else if (job.status === 'failed') {
          status.textContent = `‚ùå Failed: ${job.error || 'Unknown error'}`;
          status.style.color = '#DC2626';
          
          // Clear stored job
          sessionStorage.removeItem('activeDetectionJob');
          
          btn.disabled = false;
          btn.textContent = 'üîç Detect All Pages';
          currentJobId = null;
          
          // Refresh active jobs list
          await checkActiveJobs();
        }
        
      } catch (error) {
        status.textContent = `‚ùå Error checking status: ${error.message}`;
        status.style.color = '#DC2626';
        
        btn.disabled = false;
        btn.textContent = 'üîç Detect All Pages';
        currentJobId = null;
        
        // Clear stored job on error
        sessionStorage.removeItem('activeDetectionJob');
      }
    }

    function displayJobResults(job) {
      const results = document.getElementById('detect-all-results');
      if (!results || !job.results || job.results.length === 0) return;
      
      results.style.display = 'block';
      results.innerHTML = `
        <div style="background: white; border-radius: 8px; padding: 1rem; max-height: 400px; overflow-y: auto;">
          <h3 style="margin: 0 0 1rem 0; font-size: 1rem; color: #1a202c;">Detection Results</h3>
          ${job.results.map(r => {
            const confidenceColors = {
              high: '#10B981',
              medium: '#F59E0B',
              low: '#EF4444'
            };
            const color = confidenceColors[r.confidence] || '#6b7280';
            
            return `
              <div style="border-bottom: 1px solid #e5e7eb; padding: 0.75rem 0; font-size: 0.875rem;">
                <div style="font-weight: 600; color: #1a202c; margin-bottom: 0.25rem;">
                  ${r.docPath}
                  <span style="
                    display: inline-block;
                    padding: 2px 8px;
                    background: ${color}20;
                    color: ${color};
                    border-radius: 12px;
                    font-size: 0.75rem;
                    font-weight: 600;
                    margin-left: 0.5rem;
                  ">
                    ${r.confidence.toUpperCase()}
                  </span>
                </div>
                <div style="color: #6b7280; font-size: 0.75rem;">
                  Files: ${r.files.length > 0 ? r.files.slice(0, 3).join(', ') : 'none'}
                  ${r.files.length > 3 ? ` (+${r.files.length - 3} more)` : ''}
                </div>
                ${r.folders.length > 0 ? `
                  <div style="color: #6b7280; font-size: 0.75rem;">
                    Folders: ${r.folders.join(', ')}
                  </div>
                ` : ''}
              </div>
            `;
          }).join('')}
        </div>
      `;
    }
  </script>
