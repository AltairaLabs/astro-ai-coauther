// Feedback Dashboard - View all collected feedback

// Ensure this page renders at request time so it can read feedback storage
export const prerender = false;

let feedbackData: any = {
  version: '1.0.0',
  entries: [],
  lastUpdated: new Date().toISOString(),
};

try {
  // Fetch from API endpoint - simpler and more reliable
  const url = new URL('/_ai-coauthor/feedback', Astro.url || 'http://localhost:4321');
  console.log('ðŸŸ£ [DASHBOARD] Fetching from:', url.toString());
  const response = await fetch(url);
  console.log('ðŸŸ£ [DASHBOARD] Response status:', response.status);
  feedbackData = await response.json();
  console.log('ðŸŸ£ [DASHBOARD] Loaded entries:', feedbackData.entries?.length);
} catch (error) {
  console.error('ðŸŸ£ [DASHBOARD] Failed to load feedback:', error);
  console.error('ðŸŸ£ [DASHBOARD] Error details:', error.stack);
}

const stats = {
  totalFeedback: feedbackData.entries?.length || 0,
  averageRating: feedbackData.entries?.length 
    ? (feedbackData.entries.reduce((sum: number, entry: any) => sum + (entry.rating || 0), 0) / feedbackData.entries.length).toFixed(1)
    : 'N/A',
};

// Group feedback by page
const feedbackByPage = feedbackData.entries?.reduce((acc: any, entry: any) => {
  const page = entry.page || entry.pageUrl || 'unknown';
  if (!acc[page]) {
    acc[page] = [];
  }
  acc[page].push(entry);
  return acc;
}, {}) || {};
