{
  "name": "astro-ai-coauthor",
  "version": "0.0.2",
  "type": "module",
  "description": "An Astro integration for developer-mode documentation review, metadata tracking, and AI-assisted documentation maintenance",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:playground": "cd playground && npm run build",
    "prepublishOnly": "npm run build && npm run lint && npm run test && npm run test:playground"
  },
  "keywords": [
    "astro",
    "astro-integration",
    "documentation",
    "ai",
    "feedback",
    "developer-tools"
  ],
  "author": "AltairaLabs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AltairaLabs/astro-ai-coauther.git"
  },
  "bugs": {
    "url": "https://github.com/AltairaLabs/astro-ai-coauther/issues"
  },
  "homepage": "https://github.com/AltairaLabs/astro-ai-coauther#readme",
  "peerDependencies": {
    "astro": "^4.0.0"
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.19.25",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^4.0.10",
    "astro": "^4.0.0",
    "eslint": "^8.57.1",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.10"
  }
}
