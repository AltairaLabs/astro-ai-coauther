---
import BaseLayout from '../layouts/BaseLayout.astro';
import { readFile } from 'node:fs/promises';
import { join } from 'node:path';
import { marked } from 'marked';

const markdownPath = join(process.cwd(), 'configuration.md');
const markdown = await readFile(markdownPath, 'utf-8');
const content = marked.parse(markdown);
---

<BaseLayout title="Configuration">
  <article class="prose" set:html={content} />
</BaseLayout>

<style>
  .prose {
    max-width: 65ch;
    margin: 0 auto;
  }
  
  .prose :global(h1) {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .prose :global(h2) {
    font-size: 2rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .prose :global(pre) {
    background: var(--color-code-bg);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
  }
  
  .prose :global(code) {
    background: var(--color-code-bg);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
  }
  
  .prose :global(pre code) {
    background: none;
    padding: 0;
  }
  
  .prose :global(table) {
    border-collapse: collapse;
    width: 100%;
    margin: 1rem 0;
  }
  
  .prose :global(th),
  .prose :global(td) {
    border: 1px solid var(--color-border);
    padding: 0.5rem;
    text-align: left;
  }
  
  .prose :global(th) {
    background: var(--color-code-bg);
    font-weight: 600;
  }
</style>
