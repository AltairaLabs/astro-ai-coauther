---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'An Astro integration for developer-mode documentation review and AI-assisted maintenance' } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Astro AI Coauthor</title>
    <style>
      :root {
        --color-bg: #ffffff;
        --color-text: #1a1a1a;
        --color-accent: #4f46e5;
        --color-accent-light: #818cf8;
        --color-border: #e5e7eb;
        --color-code-bg: #f3f4f6;
      }

      @media (prefers-color-scheme: dark) {
        :root {
          --color-bg: #0f172a;
          --color-text: #f1f5f9;
          --color-accent: #818cf8;
          --color-accent-light: #c7d2fe;
          --color-border: #334155;
          --color-code-bg: #1e293b;
        }
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: system-ui, -apple-system, sans-serif;
        line-height: 1.6;
        color: var(--color-text);
        background: var(--color-bg);
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
      }

      header {
        border-bottom: 1px solid var(--color-border);
        padding: 1.5rem 0;
        margin-bottom: 3rem;
      }

      nav {
        display: flex;
        gap: 2rem;
        align-items: center;
        flex-wrap: wrap;
      }

      nav a {
        color: var(--color-text);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s;
      }

      nav a:hover {
        color: var(--color-accent);
      }

      nav a.active {
        color: var(--color-accent);
      }

      .logo {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--color-accent);
        margin-right: auto;
      }

      main {
        min-height: 60vh;
        padding-bottom: 4rem;
      }

      footer {
        border-top: 1px solid var(--color-border);
        padding: 2rem 0;
        margin-top: 4rem;
        text-align: center;
        color: #6b7280;
        font-size: 0.875rem;
      }

      h1, h2, h3, h4, h5, h6 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        line-height: 1.3;
      }

      h1 { font-size: 2.5rem; }
      h2 { font-size: 2rem; }
      h3 { font-size: 1.5rem; }

      p {
        margin-bottom: 1rem;
      }

      code {
        background: var(--color-code-bg);
        padding: 0.2em 0.4em;
        border-radius: 0.25rem;
        font-size: 0.9em;
        font-family: 'Courier New', monospace;
      }

      pre {
        background: var(--color-code-bg);
        padding: 1rem;
        border-radius: 0.5rem;
        overflow-x: auto;
        margin: 1rem 0;
      }

      pre code {
        background: none;
        padding: 0;
      }

      a {
        color: var(--color-accent);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      ul, ol {
        margin-left: 2rem;
        margin-bottom: 1rem;
      }

      li {
        margin-bottom: 0.5rem;
      }

      .badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        background: var(--color-accent);
        color: white;
        border-radius: 1rem;
        font-size: 0.875rem;
        font-weight: 500;
      }
    </style>
  </head>
  <body>
    <header>
      <div class="container">
        <nav>
          <a href={`${base}/`} class="logo">ü§ñ Astro AI Coauthor</a>
          <a href={`${base}/`}>Home</a>
          <a href={`${base}/getting-started`}>Getting Started</a>
          <a href={`${base}/features`}>Features</a>
          <a href={`${base}/configuration`}>Configuration</a>
          <a href={`${base}/api`}>API</a>
          <a href={`${base}/development`}>Development</a>
          <a href={`${base}/storage-adapters`}>Storage</a>
          <a href={`${base}/e2e-testing`}>Testing</a>
          <a href="https://github.com/AltairaLabs/astro-ai-coauther" target="_blank">GitHub</a>
        </nav>
      </div>
    </header>
    <main>
      <div class="container">
        <slot />
      </div>
    </main>
    <footer>
      <div class="container">
        <p>Built with ‚ù§Ô∏è using Astro | MIT License | <a href="https://github.com/AltairaLabs/astro-ai-coauther">View on GitHub</a></p>
      </div>
    </footer>
  </body>
</html>
